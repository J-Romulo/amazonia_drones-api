{
  "compilerOptions": {
    "target": "es2016",                                  
    "lib": ["es6"],                                      
    "rootDir": "src",                                    
    "resolveJsonModule": true,                           
    "allowJs": true,                                     
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": true,                              
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "CommonJS"
  }
}
